@startuml
hide <<Path>> circle
hide <<Response>> circle
hide <<Parameter>> circle
hide empty methods
hide empty fields
set namespaceSeparator none

class "CustomerType" {
  value : string
}

class "Customer" {
  firstName : string
  lastName : string
  heightMetres : decimal {O}
}

"Customer" --> "1" "CustomerType"  :  "type"

"Customer" --> "*" "Customer"  :  "friends"

"Customer" --> "0..1" "Customer"  :  "favouritePartner"

@enduml